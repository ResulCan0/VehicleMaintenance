@model StockPart

@{
    ViewData["Title"] = "Parça Sil";
}

<h2>Delete Stock Part</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Stock Part</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Part Number</dt>
        <dd class="col-sm-10">@Model.PartNumber</dd>

        <dt class="col-sm-2">Part Name</dt>
        <dd class="col-sm-10">@Model.PartName</dd>

        <dt class="col-sm-2">Part Date</dt>
        <dd class="col-sm-10">@Model.PartDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Part Amount</dt>
        <dd class="col-sm-10">@Model.PartAmount</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PartId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
