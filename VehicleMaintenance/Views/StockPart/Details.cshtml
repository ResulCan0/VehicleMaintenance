@model StockPart

@{
    ViewData["Title"] = "Parça Detayı";
}

<h2>Stock Part Details</h2>

<div>
    <h4>Stock Part</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Part Number</dt>
        <dd class="col-sm-10">@Model.PartNumber</dd>

        <dt class="col-sm-2">Part Name</dt>
        <dd class="col-sm-10">@Model.PartName</dd>

        <dt class="col-sm-2">Part Date</dt>
        <dd class="col-sm-10">@Model.PartDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Part Amount</dt>
        <dd class="col-sm-10">@Model.PartAmount</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.PartId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
