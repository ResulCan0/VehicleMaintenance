@model StockPart

@{
    ViewData["Title"] = "Create New Stock Part";
}

<h2>Create New Stock Part</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PartNumber" class="control-label"></label>
        <input asp-for="PartNumber" class="form-control" />
        <span asp-validation-for="PartNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartName" class="control-label"></label>
        <input asp-for="PartName" class="form-control" />
        <span asp-validation-for="PartName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartDate" class="control-label"></label>
        <input asp-for="PartDate" type="date" class="form-control" />
        <span asp-validation-for="PartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartAmount" class="control-label"></label>
        <input asp-for="PartAmount" class="form-control" />
        <span asp-validation-for="PartAmount" class="text-danger"></span>
    </div>
    <!-- New input for Stock Quantity -->
    <div class="form-group">
        <label asp-for="StockQuantity" class="control-label"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
