@model IEnumerable<Vehicle>

@{
    ViewBag.Title = "Vehicles";
}

<h2>Vehicles</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Plate Number</th>
            <th>Vehicle Type</th>
            <th>Year</th>
            <th>Brand</th>
            <th>Company</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.PlateNumber</td>
                <td>@vehicle.VehicleType</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.Brand.BrandName</td>
                <td>@vehicle.Company.CompanyName</td>
                <td>
                    <a href="/Vehicle/Edit/@vehicle.VehicleId" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Vehicle/Details/@vehicle.VehicleId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Vehicle/Delete/@vehicle.VehicleId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Vehicle/Create" class="btn btn-success">Add New Vehicle</a>
