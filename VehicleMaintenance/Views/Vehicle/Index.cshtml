@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Araçlar";
}

<h1>Araçlar</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Plaka No</th>
            <th>Araç Tipi</th>
            <th>Yıl</th>
            <th>Marka</th>
            <th>Şirket</th>
            <th>Düzenle - Detaylar - Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PlateNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.VehicleType)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.BrandModel.Brand.BrandName)</td>
                <td>@Html.DisplayFor(modelItem => item.Company.CompanyName)</td>
                <td>
                    <a href="/Vehicle/Edit/@item.VehicleId" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/Vehicle/Details/@item.VehicleId" class="btn btn-info btn-sm">Detaylar</a>
                    <a href="/Vehicle/Delete/@item.VehicleId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Vehicle/Create" class="btn btn-success">Araç Ekle</a>