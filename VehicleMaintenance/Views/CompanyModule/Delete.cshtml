@model CompanyModule

@{
    ViewData["Title"] = "Modül Sil";
}

<h1>Modül Sil</h1>

<h3>Bu modülü silmek istediğinize emin misiniz?</h3>

<div>
    <h4>Modül</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Modül Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModuleName)
        </dd>
        <dt class="col-sm-2">
            Modül Kodu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModuleCode)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ModuleId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
