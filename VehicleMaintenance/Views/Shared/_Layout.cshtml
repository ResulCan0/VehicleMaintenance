<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vehicle Management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #332;
            color: #fff;
            transition: all 0.3s;
            position: fixed;
            height: 100%;
        }

            #sidebar.active {
                margin-left: -250px;
            }

            #sidebar .sidebar-header {
                padding: 20px;
                background: #0056b3;
                text-align: center;
            }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar ul li {
                padding: 10px;
                text-align: left;
            }

                #sidebar ul li a {
                    color: white;
                    padding: 10px;
                    display: block;
                    font-size: 16px;
                    text-decoration: none;
                }

                    #sidebar ul li a:hover {
                        background: #0056b3;
                    }

                #sidebar ul li.active > a, a[aria-expanded="true"] {
                    background: #6d7fcc;
                }

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            margin-left: 250px;
            transition: all 0.3s;
        }

            #content.active {
                margin-left: 0;
            }

        .btn-toggle {
            background: transparent;
            border: none;
            color: black;
            font-size: 1.5em;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
            width: 100%;
            position: fixed;
            bottom: 0;
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Vehicle Management</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Company">Companies</a>
                </li>
                <li>
                    <a href="/Brand">Brands</a>
                </li>
                <li>
                    <a href="/Vehicle">Vehicles</a>
                </li>
                <li>
                    <a href="/StockPart">Stock Parts</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <button type="button" id="sidebarCollapse" class="btn-toggle">
                <i class="fas fa-bars"></i>
            </button>

            <main role="main" class="container mt-4">
                @RenderBody()
                @RenderSection("Scripts", required: false)
            </main>

            <footer class="footer">
                <div class="container">
                    <span class="text-muted">© 2024 Vehicle Management System</span>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
</body>
</html>
