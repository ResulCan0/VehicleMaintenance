@model Company

<h2>Şirket Sil</h2>

<h3>Bu şirketi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.CompanyName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Şirket Adı
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            Vergi Numarası
        </dt>
        <dd class="col-sm-10">
            @Model.TaxNumber
        </dd>
        <dt class="col-sm-2">
            Aktif
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Yes" : "No")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CompanyId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
