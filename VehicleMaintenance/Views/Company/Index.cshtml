@model IEnumerable<Company>

@{
    ViewBag.Title = "Companies";
}

<h2>Companies</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Company Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.CompanyName</td>
                <td>
                    <a href="/Company/Edit/@company.CompanyId" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Company/Details/@company.CompanyId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Company/Delete/@company.CompanyId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Company/Create" class="btn btn-success">Add New Company</a>
