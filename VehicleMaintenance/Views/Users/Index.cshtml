@model IEnumerable<User>
@{
    ViewBag.Title = "Kullanıcı Listesi";
}
<h2>Kullanıcı Listesi</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Rol</th>
            <th>Mail Adresi</th>
            <th>Telefon Numarası</th>
            <th>Aktif</th>
            <th>Şirket</th>
            <th>Düzenle - Detaylar - Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Roles.RoleName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.IsActive ? "Yes" : "No")</td>
                <td>@(user.Company.CompanyName)</td>
                <td>
                    <a href="/Users/Edit/@user.UserId" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/Users/Details/@user.UserId" class="btn btn-info btn-sm">Detaylar</a>
                    <a href="/Users/Delete/@user.UserId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Users/Create" class="btn btn-success">Yeni Kullanıcı Ekle</a>