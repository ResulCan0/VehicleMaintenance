@model IEnumerable<User>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Is Active</th>
            <th>Company</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Roles.Roles</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.IsActive ? "Yes" : "No")</td>
                <td>@(user.Company.CompanyName)</td>
                <td>
                    <a href="@Url.Action("Edit", "Users", new { id = user.UserId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Users", new { id = user.UserId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Users")">Create New User</a>
