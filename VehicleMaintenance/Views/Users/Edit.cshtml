@model User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}
<style>
    .custom-checkbox {
        transform: scale(1.5); /* Checkbox boyutunu büyütür */
        margin-left: 10px; /* Checkbox ile etiket arasındaki boşluğu ayarlar */
        /*vertical-align: middle; /* Checkbox'ı etiket ile aynı hizaya getirir */
    }
</style>

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Ad</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Soyad</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Rol</label>
        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Mail Adresi</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="control-label">Aktif</label>
        <input asp-for="IsActive" class="form-check-input d-inline custom-checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
