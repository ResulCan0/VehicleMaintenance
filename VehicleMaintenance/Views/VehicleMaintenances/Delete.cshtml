@model VehicleMaintenances

@{
    ViewData["Title"] = "Araç Bakım Sil";
}

<h1>Araç Bakım Sil</h1>

<h3>Silmek istediğinizden emin misiniz?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bakım Tipi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaintenanceType)
        </dd>
        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Değişen Parça
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChargeParts)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VehicleMaintenanceId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
