@model VehicleMaintenances

@{
    ViewData["Title"] = "Delete Vehicle Maintenance";
}

<h1>Delete Vehicle Maintenance</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Vehicle Maintenance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaintenanceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaintenanceType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChargeParts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChargeParts)
        </dd>
