@model VehicleMaintenances

@{
    ViewData["Title"] = "Araç Bakım Düzenle";
}

<h1>Araç Bakım Düzenle</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="VehicleMaintenanceId" />
    <div class="form-group">
        <label asp-for="MaintenanceType" class="control-label">Bakım Tipi</label>
        <input asp-for="MaintenanceType" class="form-control" />
        <span asp-validation-for="MaintenanceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReasonCode" class="control-label">Nedeni</label>
        <input asp-for="ReasonCode" class="form-control" />
        <span asp-validation-for="ReasonCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChargeParts" class="control-label">Değişen Parça</label>
        <input asp-for="ChargeParts" class="form-control" />
        <span asp-validation-for="ChargeParts" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleId" class="control-label">Plaka No</label>
        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
